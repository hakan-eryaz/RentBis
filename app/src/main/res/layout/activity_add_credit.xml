<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0FBE8"
    tools:context=".RentPage">

    <androidx.cardview.widget.CardView
        android:layout_width="396dp"
        android:layout_height="607dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.884"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:layout_width="195dp"
            android:layout_height="299dp"
            android:layout_gravity="left|center_vertical"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.99"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.355"
            tools:ignore="MissingConstraints">

            <RadioGroup
                android:id="@+id/Radiogrp"
                android:layout_width="144dp"
                android:layout_height="230dp"
                android:layout_gravity="bottom|center_horizontal">

                <TextView
                    android:id="@+id/txtView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subscription" />

                <RadioButton
                    android:id="@+id/sub1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Standard Subscription 25₺" />

                <RadioButton
                    android:id="@+id/sub2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advantageous Subscription 85₺" />

                <RadioButton
                    android:id="@+id/sub3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Premium Subscription 135₺" />

                <RadioButton
                    android:id="@+id/sub4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Credit Card 0₺" />


            </RadioGroup>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical" android:layout_marginTop="25dp">

            <EditText
                android:id="@+id/cardNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="-0.25dp"
                android:background="@drawable/bg_card_number_edit_text"
                android:drawableRight="@drawable/ic_card_number"
                android:hint="Card number"
                android:inputType="phone"
                android:padding="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorGray"
                android:textSize="14sp"
                tools:ignore="LabelFor,NegativeMargin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.25dp"
                android:orientation="horizontal"
                tools:ignore="NegativeMargin">

                <EditText
                    android:id="@+id/cardDateEditText"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="-0.25dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_date_edit_text"
                    android:drawableRight="@drawable/ic_card_date"
                    android:hint="MM/YY"
                    android:inputType="date"
                    android:padding="16dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorGray"
                    android:textSize="14sp"
                    tools:ignore="LabelFor,RtlHardcoded" />

                <EditText
                    android:id="@+id/cardCVCEditText"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="-0.25dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_cvc_edit_text"
                    android:drawableRight="@drawable/ic_card_cvc"
                    android:hint="CVC"
                    android:inputType="number"
                    android:padding="16dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorGray"
                    android:textSize="14sp"
                    tools:ignore="LabelFor,RtlHardcoded" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp"
            android:text="Pay"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="195dp"
            android:layout_height="299dp"
            android:layout_gravity="right|center_vertical"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.99"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.355"
            tools:ignore="MissingConstraints">

            <RadioGroup
                android:id="@+id/RadioGroup"
                android:layout_width="144dp"
                android:layout_height="230dp"
                android:layout_gravity="bottom|center_horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Credit" />

                <RadioButton
                    android:id="@+id/credit1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25₺" />

                <RadioButton
                    android:id="@+id/credit2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50₺" />

                <RadioButton
                    android:id="@+id/credit3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100₺" />

                <RadioButton
                    android:id="@+id/credit4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="150₺" />


            </RadioGroup>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Credits"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

</androidx.constraintlayout.widget.ConstraintLayout>